<WindowManager>:
    WelcomeScreen:

<WelcomeScreen>:
    name: 'welcome'

    FloatLayout:
        # Imagen de fondo
        Image:
            source: 'Images\fondo.jpg'  # Cambia esto por la imagen de fondo que desees
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        # Título
        Label:
            text: "Bienvenido"
            font_size: '32sp'
            pos_hint: {"center_x": 0.5, "center_y": 0.7}
            color: 1, 1, 1, 1

        # Descripción
        Label:
            text: "Aprenda a relajarse con sesiones guiadas y a dormir mejor con sonidos. Medite para descubrir su yo interior."
            halign: "center"
            font_size: '16sp'
            size_hint: (0.8, None)
            height: self.texture_size[1]  # Ajustar la altura automáticamente
            pos_hint: {"center_x": 0.5, "center_y": 0.55}
            color: 1, 1, 1, 1

        # Botón de Registro
        Button:
            text: "Regístrate"
            size_hint: 0.7, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.35}
            on_release: app.on_register()

        # Botón de Inicio de Sesión
        Button:
            text: "Inicie sesión"
            background_color: (0, 0.47, 1, 1)  # Cambia el color del botón
            size_hint: 0.7, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.25}
            on_release: app.on_login()

        # Botón para Continuar sin Registrarse
        Button:
            text: "Continuar sin registrarse"
            size_hint: 0.7, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.15}
            on_release: app.on_continue_without_register()

        # Botón para Saltar
        Button:
            text: "Saltar"
            size_hint: None, None
            size: 100, 50
            pos_hint: {"center_x": 0.9, "center_y": 0.95}
            on_release: app.on_skip()

        # Texto Legal
        Label:
            text: "Al tocar Registrarse, Iniciar sesión, Continuar sin registrarse u Omitir, aceptas nuestros Términos de uso y nuestra Política de privacidad. Por favor revísalos antes de continuar."
            halign: "center"
            font_size: "12sp"
            size_hint: (0.8, None)
            height: self.texture_size[1]  # Ajustar la altura automáticamente
            pos_hint: {"center_x": 0.5, "center_y": 0.05}
            color: 1, 1, 1, 1